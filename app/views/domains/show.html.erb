<%- model_class = Domain -%>
<div class="page-header">
  <h1><%=t '.title', :default => Domain %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @domain.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:assigned_articles) %></dt>
      <dd><pre class="prettyprint"><%= @domain.assigned_articles %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              domains_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_domain_path(@domain), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              domain_path(@domain),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

