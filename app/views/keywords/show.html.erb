<%- model_class = Keywords -%>
<div class="page-header">
  <h1><%=t '.title', :default => Keywords %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:titre) %></dt>
      <dd><pre class="prettyprint"><%= @keywords.titre %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:assigned_articles) %></dt>
      <dd><pre class="prettyprint"><%= @keywords.assigned_articles %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              keywords_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_keywords_path(@keywords), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              keywords_path(@keywords),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

